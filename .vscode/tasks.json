{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    //"command": "bash",
    "tasks": [
        {
            "taskName": "Launch Edtior",
            "command": "${workspaceRoot}/${config:output_dir}/${config:development_mode}/${config:output_program}.exe",
            "args": [
                "-editor"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "taskName": "Launch Server",
            "command": "${workspaceRoot}/${config:output_dir}/${config:development_mode}/${config:output_program}.exe",
            "args": [
                "-server"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "taskName": "Scons window clean files",
            "problemMatcher": "$msCompile",
            "type": "shell",
            "command": "scons tool=window -c"
        },
        {
            "taskName": "Build with SCons Debug 32bit",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "${workspaceRoot}/vsbuild.bat"
        },
        {
            "taskName": "Build with SCons Release 32bit",
            "problemMatcher": "$msCompile",
            "group": "build",
            "command": "${workspaceRoot}/vsbuild.bat"
        }
    ]
}
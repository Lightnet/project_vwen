{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    //"command": "bash",
    "tasks": [
        {
            "taskName": "Build with SCons Release",
            "command": "scons mode=release",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile" // Important to catch the status
        },

        {
            "taskName": "Build with SCons Debug",
            "command": "scons mode=debug",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile" // Important to catch the status
        },

        {
            "taskName": "Build with SCons Visual Studio Debug",
            "problemMatcher": "$msCompile", // Important to catch the status
            "group": "build",
            "isShellCommand": true,
            "command": "./vsbuild.bat",
            //"windows": {
                //"command": "echo %cd%",
                //"isShellCommand": true
            //}
        }
    ]
}
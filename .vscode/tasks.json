{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    //"command": "bash",
    "tasks": [
        {
            "taskName": "Build with SCons Mingw Debug",
            "command": "scons mode=debug",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Build with SCons Mingw Release",
            "command": "scons mode=release",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Build with SCons Visual Studio Debug",
            "problemMatcher": "$msCompile",
            "group": "build",
            "isShellCommand": true,
            "command": "./vsbuild.bat"
        },
        {
            "taskName": "Build with SCons Visual Studio Release",
            "problemMatcher": "$msCompile",
            "group": "build",
            "isShellCommand": true,
            "command": "./vsbuild.bat"
        }
    ]
}
    "version": "2.0.0",
    //"command": "bash",
    "tasks": [
        /*
        {
            "taskName": "Build with SCons Mingw Debug",
            "command": "scons mode=debug",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Build with SCons Mingw Release",
            "command": "scons mode=release",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        */
        {
            "taskName": "Scons window clean files",
            "problemMatcher": "$msCompile",
            "type":"shell",
            "command": "scons tool=window -c"
        },
        {
            "taskName": "Build with SCons Debug 32bit",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            //"isShellCommand": true,
            "command": "${workspaceRoot}/vsbuild.bat"
        },
        {
            "taskName": "Build with SCons Release 32bit",
            "problemMatcher": "$msCompile",
            "group": "build",
            //"isShellCommand": true,
            "command": "${workspaceRoot}/vsbuild.bat"
        }
    ]
}